<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cityname"
        android:layout_width="wrap_content"
        android:text="New Delhi ,India"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cityname_detail"
        android:layout_below="@+id/cityname"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/cityname_detail_sort_name"
        android:text="jIndira Gandhi Internation Airport"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cityname_detail_sort_name"
        android:layout_marginRight="10dp" />
    <TextView
        android:id="@+id/cityname_detail_sort_name"
        android:layout_below="@+id/cityname"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="DEL"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>